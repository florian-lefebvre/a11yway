{
    "name": "a11yway",
    "version": "0.0.1",
    "description": "",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "dev": "concurrently \"pnpm tsup:dev\" \"pnpm css:dev\"",
        "build": "pnpm tsup:build && pnpm css:build",
        "tsup:dev": "tsup --watch \"src/**/*.{js,jsx,ts,tsx}\"",
        "tsup:build": "tsup",
        "css:dev": "postcss ./src/css --dir ./dist/css --watch",
        "css:build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
        "format": "prettier --write ."
    },
    "keywords": [],
    "author": "Florian LEFEBVRE",
    "license": "ISC",
    "devDependencies": {
        "@types/react": "^18.2.9",
        "autoprefixer": "^10.4.14",
        "concurrently": "^8.1.0",
        "postcss": "^8.4.24",
        "postcss-cli": "^10.1.0",
        "postcss-nested": "^6.0.1",
        "prettier": "^2.8.8",
        "tailwindcss": "^3.3.2",
        "tsup": "^6.7.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.15",
        "@heroicons/react": "^2.0.18",
        "@nanostores/react": "^0.7.1",
        "@r2wc/react-to-web-component": "^2.0.2",
        "nanostores": "^0.9.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
